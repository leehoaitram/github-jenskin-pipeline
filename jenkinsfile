pipeline {
    agent any
    tools {
        maven 'Maven' // This name must match exactly with the name set in Global Tool Configuration
    }
    stages {
        stage('Build') {
            steps {
                script {
                    if (isUnix()) {
                        sh 'mvn clean install'
                    } else {
                        bat 'mvn clean install'
                    }
                }
            }
        }
    }
}
